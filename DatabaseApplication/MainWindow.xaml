<Window x:Class="DatabaseApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="assetText" HorizontalAlignment="Left" Height="100" Margin="88,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="assetDisplayButton" Content="See Assets" HorizontalAlignment="Left" Margin="88,174,0,0" VerticalAlignment="Top" Width="120" Click="assetDisplayButton_Click"/>
        <TextBox x:Name="employeeDisplay" HorizontalAlignment="Left" Height="100" Margin="267,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="employeeDisplayButton" Content="See Employees" HorizontalAlignment="Left" Margin="267,174,0,0" VerticalAlignment="Top" Width="120" Click="employeeDisplayButton_Click"/>
    </Grid>
</Window>
